{
    "root": true, /* Ruta donde se encuentra el eslint y aplicara las reglas */
    "plugins": ["@typescript-eslint"], /* Definimos que todos los plugins y parsers son heredados de typescript-eslint*/
    "parser": "@typescript-eslint/parser", /* anadir reglas especificas de typescript*/
    "extends": [ /* Plugins de soporte para typescript para eslint */
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": { /* me permite especificar mi objeto de reglas o monitorear reglas  */
        "quotes": ["error", "single"],
        "@typescript-eslint/no-explicit-any": ["warn"],
        "curly": "error",
        "no-empty": "error"
    }
}